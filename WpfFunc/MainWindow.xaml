<Window x:Class="WpfFunc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WpfFunc.Views"
        Title="ЛР1 - Панов Артем"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="Привязка по умолчанию">
                <views:DefaultBindingView />
            </TabItem>
            <TabItem Header="Двухсторонняя привязка">
                <views:TwoWayBindingView />
            </TabItem>
            <TabItem Header="Одноразовая привязка">
                <views:OneTimeBindingView />
            </TabItem>
            <TabItem Header="Односторонняя привязка">
                <views:OneWayBindingView />
            </TabItem>
            <TabItem Header="Триггеры">
                <views:TriggersView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>