<Window x:Class="WpfFunc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЛР1 - Панов Артем"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="HoverButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#E0E0E0" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Padding"
                    Value="10,5" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#2196F3" />
                    <Setter Property="Foreground"
                            Value="White" />
                    <Setter Property="FontWeight"
                            Value="Bold" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- Вкладка 1: Привязка по умолчанию -->
            <TabItem Header="Привязка по умолчанию">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="1. Привязка по умолчанию"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" />

                        <GroupBox Header="TextBox (TwoWay по умолчанию)"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBox Text="{Binding DefaultText}"
                                         Height="30"
                                         Margin="0,0,0,5" />
                                <TextBlock Text="{Binding DefaultText}"
                                           Background="#E3F2FD"
                                           Padding="10" />
                                <TextBlock Text="Изменения в TextBox сразу обновляют TextBlock"
                                           FontStyle="Italic"
                                           Foreground="#666"
                                           Margin="0,5,0,0" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="TextBlock (OneWay по умолчанию)"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding CurrentTime, StringFormat='Текущее время: {0:HH:mm:ss}'}"
                                           FontSize="14"
                                           Padding="10"
                                           Background="#E8F5E9" />
                                <Button Content="Обновить"
                                        Command="{Binding UpdateCommand}"
                                        Width="100"
                                        Margin="0,10,0,0" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Прямая привязка vs через ViewModel"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Прямая привязка элементов:"
                                           Margin="0,0,0,5" />
                                <Slider x:Name="DirectSlider"
                                        Minimum="0"
                                        Maximum="100"
                                        Value="25"
                                        Margin="0,0,0,5" />
                                <TextBlock Text="{Binding Value, ElementName=DirectSlider, StringFormat='Прямая: {0}'}"
                                           Margin="0,0,0,10" />

                                <TextBlock Text="Привязка через ViewModel:"
                                           Margin="0,0,0,5" />
                                <Slider Value="{Binding SliderValue}"
                                        Minimum="0"
                                        Maximum="100"
                                        Margin="0,0,0,5" />
                                <TextBlock Text="{Binding SliderValue, StringFormat='Через VM: {0}'}" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка 2: Двухсторонняя привязка -->
            <TabItem Header="Двухсторонняя привязка">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="2. Двухсторонняя привязка"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" />

                        <GroupBox Header="Два синхронизированных TextBox"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBox Text="{Binding TwoWayText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Height="30"
                                         Margin="0,0,0,5" />
                                <TextBox Text="{Binding TwoWayText, Mode=TwoWay}"
                                         Height="30"
                                         Margin="0,0,0,5" />
                                <TextBlock Text="Изменение в любом TextBox обновляет оба"
                                           FontStyle="Italic"
                                           Foreground="#666" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Slider ↔ TextBox"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <Slider Value="{Binding SliderValue, Mode=TwoWay}"
                                        Minimum="0"
                                        Maximum="100"
                                        Margin="0,0,0,5" />
                                <TextBox Text="{Binding SliderValue, Mode=TwoWay, StringFormat=N0}"
                                         Width="100"
                                         Height="30"
                                         Margin="0,0,0,5" />
                                <TextBlock Text="Двигайте слайдер или введите число"
                                           FontStyle="Italic"
                                           Foreground="#666" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Состояние активности"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <CheckBox IsChecked="{Binding IsActive, Mode=TwoWay}"
                                          Content="Активный режим"
                                          Margin="0,0,0,5" />
                                <Button Content="Переключить состояние"
                                        Command="{Binding ToggleCommand}"
                                        Width="150"
                                        Margin="0,5,0,0" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка 3: Одноразовая привязка -->
            <TabItem Header="Одноразовая привязка">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="3. Одноразовая привязка"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" />

                        <GroupBox Header="Загружается один раз при запуске"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding OneTimeText, Mode=OneTime}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Background="#FFF3E0"
                                           Padding="15" />
                                <TextBlock Text="Это время загрузки приложения"
                                           FontStyle="Italic"
                                           Margin="0,5,0,0" />

                                <Button Content="Попробовать обновить"
                                        Command="{Binding UpdateCommand}"
                                        Width="150"
                                        Margin="0,15,0,5" />

                                <TextBlock Text="Время НЕ изменится - OneTime привязка!"
                                           Foreground="#F44336"
                                           FontWeight="Bold" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Сравнение OneTime vs OneWay"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="OneTime (статический):"
                                           FontWeight="Bold"
                                           Margin="0,0,0,5" />
                                <TextBlock Text="{Binding OneTimeText, Mode=OneTime}"
                                           Background="#FFECB3"
                                           Padding="10" />

                                <TextBlock Text="OneWay (динамический):"
                                           FontWeight="Bold"
                                           Margin="0,10,0,5" />
                                <TextBlock Text="{Binding CurrentTime, Mode=OneWay, StringFormat='Текущее: {0:HH:mm:ss}'}"
                                           Background="#B3E5FC"
                                           Padding="10" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка 4: Односторонняя привязка -->
            <TabItem Header="Односторонняя привязка">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="4. Односторонняя привязка"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" />

                        <GroupBox Header="Только чтение (OneWay)"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBox Text="{Binding SourceText}"
                                         Height="30"
                                         Margin="0,0,0,5" />
                                <TextBlock Text="{Binding SourceText, Mode=OneWay}"
                                           Background="#C8E6C9"
                                           Padding="10" />
                                <TextBlock Text="Текст передаётся только от TextBox к TextBlock"
                                           FontStyle="Italic"
                                           Foreground="#666"
                                           Margin="0,5,0,0" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Визуализация данных"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <Slider Value="{Binding SliderValue}"
                                        Minimum="0"
                                        Maximum="100"
                                        Margin="0,0,0,5" />
                                <ProgressBar Value="{Binding SliderValue, Mode=OneWay}"
                                             Height="20"
                                             Margin="0,0,0,5" />
                                <TextBlock Text="{Binding SliderValue, StringFormat='Значение: {0}/100'}"
                                           Margin="0,0,0,5" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Действия с данными"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <Button Content="Очистить поля"
                                        Command="{Binding ClearCommand}"
                                        Width="150"
                                        Margin="0,0,0,5" />
                                <TextBlock Text="Очищает текст в TwoWay и Source полях"
                                           FontStyle="Italic"
                                           Foreground="#666" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка 5: Триггеры -->
            <TabItem Header="Триггеры">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="5. Триггеры"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" />

                        <GroupBox Header="Property Trigger"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Срабатывает при изменении свойства элемента"
                                           Margin="0,0,0,5" />
                                <Button Content="Наведите курсор мыши"
                                        Style="{StaticResource HoverButton}"
                                        Width="250"
                                        Height="40" />
                                <TextBlock Text="Меняет цвет при наведении"
                                           FontStyle="Italic"
                                           Foreground="#666" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Data Trigger"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Срабатывает по условию с данными"
                                           Margin="0,0,0,5" />
                                <TextBox Text="Панов Артем"
                                         Height="30"
                                         Margin="0,0,0,5">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Background"
                                                    Value="White" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}}"
                                                             Value="0">
                                                    <Setter Property="Background"
                                                            Value="#FFCDD2" />
                                                    <Setter Property="ToolTip"
                                                            Value="Поле не может быть пустым" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}}"
                                                             Value="10">
                                                    <Setter Property="Background"
                                                            Value="#C8E6C9" />
                                                    <Setter Property="ToolTip"
                                                            Value="Идеальная длина" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="Пустое поле - красный фон, 10 символов - зелёный"
                                           FontStyle="Italic"
                                           Foreground="#666" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Event Trigger"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Event Trigger"
                                           FontWeight="Bold"
                                           Margin="0,0,0,5" />
                                <TextBlock Text="Срабатывает при возникновении события (например, Click)"
                                           FontStyle="Italic"
                                           Foreground="#666"
                                           Margin="0,0,0,10" />

                                <Button Content="Нажмите для анимации"
                                        Width="250"
                                        Height="40"
                                        Background="#2196F3"
                                        Foreground="White">
                                    <Button.Triggers>
                                        <EventTrigger RoutedEvent="Button.Click">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <!-- Простая анимация изменения ширины -->
                                                    <DoubleAnimation Storyboard.TargetProperty="Width"
                                                                     To="300"
                                                                     Duration="0:0:0.3"
                                                                     AutoReverse="True" />

                                                    <!-- Простая анимация изменения цвета -->
                                                    <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                                    To="#4CAF50"
                                                                    Duration="0:0:0.3"
                                                                    AutoReverse="True" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Button.Triggers>
                                </Button>

                                <TextBlock Text="Кнопка расширяется и меняет цвет при клике"
                                           FontStyle="Italic"
                                           Foreground="#666"
                                           Margin="0,10,0,0" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Multi Trigger"
                                  Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Срабатывает при нескольких условиях"
                                           Margin="0,0,0,5" />
                                <CheckBox x:Name="EnableTrigger"
                                          Content="Включить кнопку"
                                          IsChecked="True"
                                          Margin="0,0,0,5" />
                                <Button Content="Наведите при включенном состоянии"
                                        Width="300"
                                        Height="40"
                                        Background="#E0E0E0"
                                        IsEnabled="{Binding IsChecked, ElementName=EnableTrigger}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsMouseOver"
                                                                   Value="True" />
                                                        <Condition Property="IsEnabled"
                                                                   Value="True" />
                                                    </MultiTrigger.Conditions>
                                                    <Setter Property="Background"
                                                            Value="#FFEB3B" />
                                                    <Setter Property="FontWeight"
                                                            Value="Bold" />
                                                </MultiTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <TextBlock Text="Работает только при наведении И включенном состоянии"
                                           FontStyle="Italic"
                                           Foreground="#666" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>