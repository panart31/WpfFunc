<UserControl x:Class="WpfFunc.Views.DefaultBindingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="1. Привязка по умолчанию"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10" />

            <GroupBox Header="TextBox (TwoWay по умолчанию)"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBox Text="{Binding DefaultText}"
                             Height="30"
                             Margin="0,0,0,5" />
                    <TextBlock Text="{Binding DefaultText}"
                               Background="#E3F2FD"
                               Padding="10" />
                    <TextBlock Text="Изменения в TextBox сразу обновляют TextBlock"
                               FontStyle="Italic"
                               Foreground="#666"
                               Margin="0,5,0,0" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="TextBlock (OneWay по умолчанию)"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding CurrentTime, StringFormat='Текущее время: {0:HH:mm:ss}'}"
                               FontSize="14"
                               Padding="10"
                               Background="#E8F5E9" />
                    <Button Content="Обновить"
                            Command="{Binding UpdateCommand}"
                            Width="100"
                            Margin="0,10,0,0" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Прямая привязка vs через ViewModel"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="Прямая привязка элементов:"
                               Margin="0,0,0,5" />
                    <Slider x:Name="DirectSlider"
                            Minimum="0"
                            Maximum="100"
                            Value="25"
                            Margin="0,0,0,5" />
                    <TextBlock Text="{Binding Value, ElementName=DirectSlider, StringFormat='Прямая: {0}'}"
                               Margin="0,0,0,10" />

                    <TextBlock Text="Привязка через ViewModel:"
                               Margin="0,0,0,5" />
                    <Slider Value="{Binding SliderValue}"
                            Minimum="0"
                            Maximum="100"
                            Margin="0,0,0,5" />
                    <TextBlock Text="{Binding SliderValue, StringFormat='Через VM: {0}'}" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
