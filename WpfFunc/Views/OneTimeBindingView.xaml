<UserControl x:Class="WpfFunc.Views.OneTimeBindingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="3. Одноразовая привязка"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10" />

            <GroupBox Header="Загружается один раз при запуске"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding OneTimeText, Mode=OneTime}"
                               FontSize="16"
                               FontWeight="Bold"
                               Background="#FFF3E0"
                               Padding="15" />
                    <TextBlock Text="Это время загрузки приложения"
                               FontStyle="Italic"
                               Margin="0,5,0,0" />

                    <Button Content="Попробовать обновить"
                            Command="{Binding UpdateCommand}"
                            Width="150"
                            Margin="0,15,0,5" />

                    <TextBlock Text="Время НЕ изменится - OneTime привязка!"
                               Foreground="#F44336"
                               FontWeight="Bold" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Сравнение OneTime vs OneWay"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="OneTime (статический):"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />
                    <TextBlock Text="{Binding OneTimeText, Mode=OneTime}"
                               Background="#FFECB3"
                               Padding="10" />

                    <TextBlock Text="OneWay (динамический):"
                               FontWeight="Bold"
                               Margin="0,10,0,5" />
                    <TextBlock Text="{Binding CurrentTime, Mode=OneWay, StringFormat='Текущее: {0:HH:mm:ss}'}"
                               Background="#B3E5FC"
                               Padding="10" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Прямая привязка vs через ViewModel"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="Прямая привязка TextBlock:"
                               Margin="0,0,0,5" />
                    <TextBlock x:Name="DirectTextBlock"
                               Text="Статический текст"
                               Background="#FFECB3"
                               Padding="10"
                               Margin="0,0,0,10" />

                    <TextBlock Text="Привязка через ViewModel (OneTime):"
                               Margin="0,0,0,5" />
                    <TextBlock Text="{Binding OneTimeText, Mode=OneTime}"
                               Background="#B3E5FC"
                               Padding="10" />
                    <TextBlock Text="OneTime привязка загружается один раз при создании ViewModel"
                               FontStyle="Italic"
                               Foreground="#666"
                               Margin="0,5,0,0" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
