<UserControl x:Class="WpfFunc.Views.OneWayBindingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="4. Односторонняя привязка"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10" />

            <GroupBox Header="Только чтение (OneWay)"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBox Text="{Binding SourceText}"
                             Height="30"
                             Margin="0,0,0,5" />
                    <TextBlock Text="{Binding SourceText, Mode=OneWay}"
                               Background="#C8E6C9"
                               Padding="10" />
                    <TextBlock Text="Текст передаётся только от TextBox к TextBlock"
                               FontStyle="Italic"
                               Foreground="#666"
                               Margin="0,5,0,0" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Визуализация данных"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Slider Value="{Binding SliderValue}"
                            Minimum="0"
                            Maximum="100"
                            Margin="0,0,0,5" />
                    <ProgressBar Value="{Binding SliderValue, Mode=OneWay}"
                                 Height="20"
                                 Margin="0,0,0,5" />
                    <TextBlock Text="{Binding SliderValue, StringFormat='Значение: {0}/100'}"
                               Margin="0,0,0,5" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Действия с данными"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Button Content="Очистить поля"
                            Command="{Binding ClearCommand}"
                            Width="150"
                            Margin="0,0,0,5" />
                    <TextBlock Text="Очищает текст в TwoWay и Source полях"
                               FontStyle="Italic"
                               Foreground="#666" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Прямая привязка vs через ViewModel"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="Прямая привязка ProgressBar:"
                               Margin="0,0,0,5" />
                    <Slider x:Name="DirectProgressSlider"
                            Minimum="0"
                            Maximum="100"
                            Value="30"
                            Margin="0,0,0,5" />
                    <ProgressBar Value="{Binding Value, ElementName=DirectProgressSlider, Mode=OneWay}"
                                 Height="20"
                                 Margin="0,0,0,10" />

                    <TextBlock Text="Привязка через ViewModel:"
                               Margin="0,0,0,5" />
                    <Slider Value="{Binding SliderValue}"
                            Minimum="0"
                            Maximum="100"
                            Margin="0,0,0,5" />
                    <ProgressBar Value="{Binding SliderValue, Mode=OneWay}"
                                 Height="20" />
                    <TextBlock Text="Изменения в ViewModel автоматически обновляют ProgressBar"
                               FontStyle="Italic"
                               Foreground="#666"
                               Margin="0,5,0,0" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
