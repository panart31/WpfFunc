<UserControl x:Class="WpfFunc.Views.TriggersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style x:Key="HoverButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#E0E0E0" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Padding"
                    Value="10,5" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#2196F3" />
                    <Setter Property="Foreground"
                            Value="White" />
                    <Setter Property="FontWeight"
                            Value="Bold" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="5. Триггеры"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10" />

            <GroupBox Header="Property Trigger"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="Срабатывает при изменении свойства элемента"
                               Margin="0,0,0,5" />
                    <Button Content="Наведите курсор мыши"
                            Style="{StaticResource HoverButton}"
                            Width="250"
                            Height="40" />
                    <TextBlock Text="Меняет цвет при наведении"
                               FontStyle="Italic"
                               Foreground="#666" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Data Trigger"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="Срабатывает по условию с данными"
                               Margin="0,0,0,5" />
                    <TextBox Text="Панов Артем"
                             Height="30"
                             Margin="0,0,0,5">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background"
                                        Value="White" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}}"
                                                 Value="0">
                                        <Setter Property="Background"
                                                Value="#FFCDD2" />
                                        <Setter Property="ToolTip"
                                                Value="Поле не может быть пустым" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}}"
                                                 Value="10">
                                        <Setter Property="Background"
                                                Value="#C8E6C9" />
                                        <Setter Property="ToolTip"
                                                Value="Идеальная длина" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock Text="Пустое поле - красный фон, 10 символов - зелёный"
                               FontStyle="Italic"
                               Foreground="#666" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Event Trigger"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="Event Trigger"
                               FontWeight="Bold"
                               Margin="0,0,0,5" />
                    <TextBlock Text="Срабатывает при возникновении события (например, Click)"
                               FontStyle="Italic"
                               Foreground="#666"
                               Margin="0,0,0,10" />

                    <Button Content="Нажмите для анимации"
                            Width="250"
                            Height="40"
                            Background="#2196F3"
                            Foreground="White">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                         To="300"
                                                         Duration="0:0:0.3"
                                                         AutoReverse="True" />

                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                        To="#4CAF50"
                                                        Duration="0:0:0.3"
                                                        AutoReverse="True" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>

                    <TextBlock Text="Кнопка расширяется и меняет цвет при клике"
                               FontStyle="Italic"
                               Foreground="#666"
                               Margin="0,10,0,0" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Multi Trigger"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="Срабатывает при нескольких условиях"
                               Margin="0,0,0,5" />
                    <CheckBox x:Name="EnableTrigger"
                              Content="Включить кнопку"
                              IsChecked="True"
                              Margin="0,0,0,5" />
                    <Button Content="Наведите при включенном состоянии"
                            Width="300"
                            Height="40"
                            Background="#E0E0E0"
                            IsEnabled="{Binding IsChecked, ElementName=EnableTrigger}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver"
                                                       Value="True" />
                                            <Condition Property="IsEnabled"
                                                       Value="True" />
                                        </MultiTrigger.Conditions>
                                        <Setter Property="Background"
                                                Value="#FFEB3B" />
                                        <Setter Property="FontWeight"
                                                Value="Bold" />
                                    </MultiTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock Text="Работает только при наведении И включенном состоянии"
                               FontStyle="Italic"
                               Foreground="#666" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
